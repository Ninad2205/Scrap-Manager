<% layout("/layouts/boilerplate") %>
<body>
    
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <form action="/elements" method="post">
                <br>
                <h1>Add New Element</h1>
                
                <div class="mb-2">
                    <label for="title" class="form-label">Enter Title : </label>
                    <input type="text" name="element[title]" placeholder="enter Title" class="form-control">

                </div>
                <div class="mb-2">
                    <label for="description" class="form-label">Enter Description : </label>
                    <textarea name="element[description]" placeholder="enter description" class="form-control"></textarea>
                </div>
                <div class="mb-2">
                    <label for="image" class="form-label">Enter Image Url : </label>
                    <input type="text" name="element[image]" placeholder="enter image url" class="form-control">
                </div>

                <div class="mb-2 ">
                    <label for="price" class="form-label">Enter Price : </label>
                    <input type="text" name="element[price]" placeholder="enter price" class="form-control">
                </div>
                

                
                <br>
                
                <button class="btn btn-dark add-btn mt-3">Add</button>
                <br>
                <br>
                
            </form>
        </div>
    </div>

</body>
